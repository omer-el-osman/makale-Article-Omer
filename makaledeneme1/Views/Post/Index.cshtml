@model IEnumerable<makaledeneme1.Core.AuthorPost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<br />
<form method="get" asp-action="search">
    <input type="search" name="searchItem" class="search-field" />
    <input type="submit" value="Search" class="btn-primary" />
</form>
<br />
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDescriptoin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostImgeUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDAte)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th></th*@>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDescriptoin)
            </td>
            <td>
                    <img src="~/imges/@item.PostImgeUrl" class="rounded-circle" width="40" height="40" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDAte)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.author.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category.Name)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    if (Model.ToList().Count < 5)
    {
        int id = 0;
        <a asp-action="Index" asp-route-id="@id">birinci Sayfa</a>

    }
    else
    {
        <a asp-action="Index" asp-route-id="@Model.ToList().Last().Id">Sonraki</a>

    }
}
