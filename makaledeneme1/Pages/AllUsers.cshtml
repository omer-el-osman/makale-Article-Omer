@page
@model makaledeneme1.Pages.AllUsersModel
@{
}


 <section class="bounce animated article-clean">
        <div class="container">
            <section class="team-boxed">
                <div class="container">
                    <div class="intro">
                        <h2 class="text-center" style="font-family: Cairo, sans-serif;">ناشرونا</h2>
                    </div>
                       <form class="me-auto search-form" target="_self">
                                <div class="d-flex align-items-center">
                                    <label class="form-label d-flex mb-0" for="search-field">
                                        <i class="fa fa-search"></i>
                                     </label>
                                     <input type="hidden" value="Search" name="LoadState">
                                     <input class="form-control search-field" type="search" id="search-field" name="search" placeholder="ابحث عن مقالة" style="font-family: Cairo, sans-serif;">
                                     <input type="submit" class="btn-secondary" value="ara" />
                                 </div>
                            </form>
                    <br />
                    <div class="row people">
                    @{
                        foreach(var i in Model.MyListOfAuthor)
                        {
                            <div class="col-md-6 col-lg-4 item" data-aos="zoom-out">
                                <div class="box">
                                    <img class="rounded-circle" src="~/imges/@i.ProtfileImgeUrl">
                                    <h3 class="name">@i.FullName</h3>
                                    <p class="description">@i.Bio</p>
                                    <div class="social">
                                        <a href="@i.Facebook">
                                        <i class="fa fa-facebook-official">
                                        </i>
                                        </a>
                                        <a href="@i.twitter">
                                        <i class="fa fa-twitter">
                                        </i>
                                        </a>
                                        <a href="@i.instagram">
                                        <i class="fa fa-instagram">
                                        </i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                  
                       
                    </div>
                </div>
                       <nav class="text-center float-end" style="font-family: Lato, sans-serif;border-color: var(--bs-red);margin: 10px;display:flex">

           
            <form method="get">
                <input type="hidden" value="all" name="LoadState">
                <input type="submit" class="form-control bg-info" value="Ana Sayfa" />
            </form>
            @if (Model.MyListOfAuthor.Count > 0)
            {
                <form method="get">
                    <input type="hidden" value="Prev" name="LoadState">
                        <input type="hidden" value="@Model.MyListOfAuthor.First().Id" name="id">
                    <input type="submit" class="form-control bg-info" value="Onceki" />
                </form>
            }

                @if (Model.MyListOfAuthor.Count == 6)
            {
                <form method="get">
                    <input type="hidden" value="Next" name="LoadState">
                    <input type="hidden" value="@Model.MyListOfAuthor.Last().Id" name="id">
                    <input type="submit" class="form-control bg-info" value="Sonraki" />
                </form>
            }
          
         

        </nav>

            </section>
        </div>
    </section>